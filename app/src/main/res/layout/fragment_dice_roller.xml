<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/TextLayout1"
        android:layout_width="411dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <EditText
            android:id="@+id/NumDiceEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Number Of Dice"
            android:inputType="number" />

        <EditText
            android:id="@+id/ModifierEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Modifier"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonLayout1"
        android:layout_width="413dp"
        android:layout_height="125dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/TextLayout1"
        tools:layout_constraintTop_toBottomOf="@id/TextLayout1"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/D4button"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/D6button"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/D8button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonLayout2"
        android:layout_width="409dp"
        android:layout_height="134dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ButtonLayout1"
        tools:layout_constraintTop_toBottomOf="@id/ButtonLayout1"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/D10button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10" />

        <Button
            android:id="@+id/D12button"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:layout_weight="1"
            android:text="12" />

        <Button
            android:id="@+id/D20button"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:layout_weight="1"
            android:text="20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TextLayout2"
        android:layout_width="409dp"
        android:layout_height="127dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/EquationView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Equation"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ResultView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Result"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>